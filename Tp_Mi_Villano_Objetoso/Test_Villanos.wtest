import Class_Villanos.*
import Class_Armas.*
import Class_Minion.*
describe "Test Villanos"{
	var gru = new Villano(null)	
	var bomba = new Arma("Bombita",100)

	
fixture{	
	gru.nuevoMinion("jon")
	gru.nuevoMinion("ny")
	gru.nuevoMinion("allon")

}
	

test "Gru tiene a Jon,ny,Allon en su ejercito de minions, por ende allon trabaja para gru" {

	assert.equals((gru.mostrarMinions()).size(),3)
}

test "Allon tiene un chiche nuevo una BOMBA! BOOM!"{
	gru.otorgarArma("allon",bomba)
	assert.equals((gru.buscarMinion("allon")).armas().size(),2)
}
test "Gru alimenta a jon con 100 bananas"{
	gru.alimentar("jon",100)
	assert.equals( (gru.buscarMinion("jon")).cantBananas(),110)
}
test "Nivel de concentracion de Ny es de 20"{
	gru.nivelConcentracion("ny")
	assert.equals((gru.buscarMinion("jon")).nivelConcentracion(),20)
}
test "Allon tiene 2 bombas, es muy peligroso"{
	gru.otorgarArma("allon",bomba)
	gru.otorgarArma("allon",bomba)
	gru.peligroso("allon")
	assert.that(true)
}
test "Gru aplica en Jon,ny Allon el suero, por ende es(son) muy poderoso"{
	gru.aplicarSuero("jon")
	gru.aplicarSuero("ny")
	gru.aplicarSuero("allon")
	gru.peligroso("allon")
	assert.that(true)
}
test "Gru aplica suero en jon. si buscamos x arma congelante salen ellos 2"{
	gru.aplicarSuero("jon")
	assert.equals(gru.minionsConArma("rayoCongelante").size(),2)
}
}
